{
    "$schema": "https://unpkg.com/knip@5/schema.json",
    "ignoreDependencies": [
        "vitest",
        "@commitlint/cli",
        "@mansur-gabidullin/config-prettier",
        "@mansur-gabidullin/config-typescript",
        "cz-conventional-changelog"
    ],
    "ignoreBinaries": ["prettier", "eslint", "tsc", "vitest"],
    "workspaces": {
        ".": {
            "entry": ["scripts/gen-commit/bin.mjs", "vitest.config.mjs", ".eslintrc.cjs"],
            "project": ["**/*.{js,cjs,mjs,jsx,ts,cts,mts,tsx,json}!"]
        },
        "packages/config/*": {
            "entry": ["*.{cts,mts,json}"],
            "project": ["**/*.{js,cjs,mjs,jsx,ts,cts,mts,tsx,json}!"]
        },
        "packages/*/*": {
            "entry": ["src/{index,main}.{ts,tsx}", "**/*.{test,test-d,spec}.ts", "vitest.config.mjs", ".eslintrc.cjs"],
            "project": ["**/*.{js,cjs,mjs,jsx,ts,cts,mts,tsx,json}!"]
        },
        "apps/*": {
            "entry": ["src/{index,main}.{ts,tsx}", "**/*.{test,test-d,spec}.ts", "vitest.config.mjs", ".eslintrc.cjs"],
            "project": ["**/*.{js,cjs,mjs,jsx,ts,cts,mts,tsx,json}!"]
        }
    }
}
